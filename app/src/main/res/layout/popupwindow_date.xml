    android:background="#ffffff"
    >

    <ImageView
        android:id="@+id/dateInput"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/date"
        android:layout_marginLeft="20dp"
        />

    <View
