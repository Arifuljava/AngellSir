<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/scannerBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="扫描内容"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/scannerBar"
        android:layout_marginTop="10dp"
        android:background="#999999"
        ></View>
    <LinearLayout
        android:id="@+id/scnanerSelectLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scannerBar"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/scnanerText"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文  本"
            android:layout_weight="1"
            android:background="@drawable/bt_8"
            android:textSize="20sp"
            android:textColor="#000000"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/scannerOneCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一维码"
            android:layout_weight="1"
            android:background="@drawable/bt_8"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="20sp"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/scannerQRCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二维码"
            android:layout_weight="1"
            android:background="@drawable/bt_8"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:padding="5dp"/>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/scannerContentLayout"
        android:layout_below="@+id/scnanerSelectLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:orientation="horizontal"

        >
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/scannerContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/scannerCancel"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="取消"
            android:background="@drawable/bt_8"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textColor="#377d84"
            android:padding="5dp" />
        <TextView
            android:id="@+id/scannerConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="确认"
            android:background="@drawable/bt_8"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#377d84"
            android:layout_marginLeft="10dp"
            android:padding="5dp"/>
    </LinearLayout>


</RelativeLayout>