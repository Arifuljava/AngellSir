    <RelativeLayout
        android:id="@+id/graffitiLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/makeGraffitiButton"
        android:layout_marginTop="10dp"
        android:background="#ffffff">

    </RelativeLayout>



</RelativeLayout>