<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#ffffff"
    >

    <ImageView
        android:id="@+id/graffitiInput"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/line11"
        android:layout_marginLeft="0dp"
        />

    <ImageView
        android:id="@+id/graffitiDline"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/dline22"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/graffitiInput"

        />
    <ImageView
        android:id="@+id/graffitiCircle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/circle32"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/graffitiDline"

        />

    <ImageView
    android:id="@+id/graffitiBlock"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/block42"
    android:layout_marginLeft="10dp"
    android:layout_toRightOf="@+id/graffitiCircle"

    />

    <ImageView
        android:id="@+id/graffitiEraser"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/eraser52"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/graffitiBlock"

        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999"
        android:layout_below="@+id/graffitiInput"/>
    <TextView
        android:id="@+id/makeGraffitiButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="确定"
        android:textColor="#fbb80e"
        android:layout_marginRight="20dp"

        android:layout_alignParentRight="true"
        />



