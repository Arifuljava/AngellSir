<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:id="@+id/marketBackground"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <View
        android:id="@+id/marketV2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bacgroundColor"
        >

    </View>
    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/backLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backlast"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/zgprint"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/marketDeviceState"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/zgdevicestate"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:visibility="invisible"/>
    <View
        android:id="@+id/marketV1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f0f0f0"
        android:layout_below="@+id/marketV2">

    </View>
    <!--android:layout_height="75dp"-->
    <EditText
        android:id="@+id/ET_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="16sp"
        android:textColor="#FFAD33"
        android:hint="搜索"
        android:background="@drawable/bt_2"
        android:drawableRight="@drawable/search"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:drawablePadding="10dp"
        android:visibility="invisible"
        />
    <!--android:layout_height="50dp"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:padding="20dp"
        android:orientation="vertical">
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/marketRecycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/marketV1"
        android:layout_marginRight="10dp"
        />







</RelativeLayout>