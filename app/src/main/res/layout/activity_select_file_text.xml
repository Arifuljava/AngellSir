                <!--/>-->
            <ImageButton
                android:id="@+id/ShopeeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/shopee"
                android:background="@drawable/bt_13"
                android:layout_marginRight="5dp"/>
            <ImageButton
                android:id="@+id/LazadaButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/lazada"
                android:background="@drawable/bt_13"
                android:layout_marginLeft="5dp"/>
            <!--<Button-->

                <!--android:id="@+id/Lazada"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:drawableTop="@drawable/lazada"-->
                <!--android:textAllCaps="false"-->
               <!--android:text="Grozziie Shop"-->
                <!--android:textSize="18sp"-->
                <!--android:textColor="#434343"-->
                <!--android:textStyle="bold"-->
                <!--android:layout_gravity="center"-->
                <!--android:gravity="center"-->
                <!--android:background="@drawable/bt_13"-->


                <!--android:drawablePadding="0dp"-->


                <!--/>-->



        </LinearLayout>
    </LinearLayout>
    <!--android:visibility="invisible"-->
    <LinearLayout

        android:id="@+id/BarcodeEditLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/PDFShopLayout"
        android:layout_marginTop="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:visibility="invisible"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"


            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <com.grozziie.grozziie_pdf.CenterButtonButton
                android:id="@+id/BarcodeEditButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:drawableLeft="@drawable/barcodeedit"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:text="@string/file_labelprint"
                android:textColor="#434343"
                android:textStyle="bold"
                android:gravity="center"
                android:drawablePadding="5dp"

                android:layout_marginRight="0dp"
                android:background="@drawable/bt_13"
                android:fontFamily="@fonts/arial"


                />
