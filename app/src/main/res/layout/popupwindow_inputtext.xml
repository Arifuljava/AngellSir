                        <!--android:max="100"-->

                         <!--/>-->

                <!--</LinearLayout>-->
                <LinearLayout
                    android:id="@+id/TextSetLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="top"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <CheckBox
                            android:id="@+id/TextCheckS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sequence"
                            android:textColor="#000000"
                            android:buttonTint="@color/bacgroundColor"
                            android:checked="false"
                            android:layout_marginLeft="1dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <Button
                            android:id="@+id/TextSetReduce"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:text="-"
                            android:background="@color/bacgroundColor"
                            />
                        <LinearLayout
                            android:id="@+id/TextSetNumberDisplay"
                            android:layout_width="50dp"
                            android:layout_height="50dp"

                            android:layout_toRightOf="@+id/TextSetReduce"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            >
                            <TextView
                                android:id="@+id/TextSetNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textColor="#000000"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                />
                        </LinearLayout>

                        <Button
                            android:id="@+id/TextSetAdd"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@color/bacgroundColor"
                            android:layout_toRightOf="@+id/TextSetNumberDisplay"
                            android:layout_marginLeft="20dp"
                            android:text="+"/>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="       "
                            android:textSize="20sp"
                            android:textColor="#000000"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.example.administrator.loveangenl.Horizon>



